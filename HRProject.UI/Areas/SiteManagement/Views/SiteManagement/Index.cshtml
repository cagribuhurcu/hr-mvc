@using HRProject.UI.Areas.SiteManagement.Models;
@model List<UserVM>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/SiteManagement/Views/Shared/_LayoutSiteManagement.cshtml";
}

<div class="card">
    <div class="table-responsive text-nowrap">
        <table class="table table-hover">
            <thead>
                <tr>
                    <th>#</th>
                    <th>Photo</th>
                    <th>FullName</th>
                    <th>Email</th>
                    <th>Phone</th>
                    <th>Job</th>
                    <th>Department</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody class="table-border-bottom-0">
                @{
                    int rowCount = 1;
                }
                @foreach (UserVM item in Model)
                {
                    <tr>
                        <th>@rowCount</th>
                        <td>
                            <ul class="list-unstyled users-list m-0 avatar-group d-flex align-items-center">
                                <li data-bs-toggle="tooltip"
                                data-popup="tooltip-custom"
                                data-bs-placement="top"
                                class="avatar avatar-xs pull-up"
                                title="Lilian Fuller">
                                    <img src="/Content/assets/img/avatars/@item.PhotoURL" alt="Avatar" class="rounded-circle" />
                                </li>
                            </ul>
                        </td>
                        <td><i class="fab fa-angular fa-lg text-danger me-3"></i> <strong>@item.FullName</strong></td>
                        <td>@item.EmailAddress</td>
                        <td>@item.PhoneNumber</td>
                        <td>@item.JobID</td>
                        <td>@item.Department</td>
                        <td>
                            <div class="dropdown">
                                <button type="button" class="btn p-0 dropdown-toggle hide-arrow" data-bs-toggle="dropdown">
                                    <i class="bx bx-dots-vertical-rounded"></i>
                                </button>
                                <div class="dropdown-menu">
                                    <a class="dropdown-item" href="javascript:void(0);"><i class="bx bx-edit-alt me-1"></i> Update</a>
                                    <a class="dropdown-item" href="javascript:void(0);"><i class="bx bx-trash me-1"></i> Details</a>
                                </div>
                            </div>
                        </td>
                    </tr>
                    rowCount++;
                }
            </tbody>
        </table>
    </div>
</div>
