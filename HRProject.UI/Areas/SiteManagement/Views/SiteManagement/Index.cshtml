@using HRProject.UI.Areas.SiteManagement.Models;
@model List<UserVM>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/SiteManagement/Views/Shared/_LayoutSiteManagement.cshtml";
}

<style>
    .card-img {
        width: 150px;
        height: 150px;
        object-fit: cover;
    }

    .card-text {
        margin-bottom: 10px;
    }
</style>

<div class="modal fade" id="exampleModalCenter" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel1">Modal title</h5>
                <button type="button"
                        class="btn-close"
                        data-bs-dismiss="modal"
                        aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <div class="row">
                    <p><strong>Name:</strong> <span id="nameBasic"></span></p>
                    <p><strong>Email:</strong> <span id="emailBasic"></span></p>
                    <p><strong>DOB:</strong> <span id="dobBasic"></span></p>
                    <p><strong>Address:</strong> <span id="addressBasic"></span></p>
                    <p><strong>Phone Number:</strong> <span id="phoneBasic"></span></p>
                    <p><strong>Department:</strong> <span id="departmentBasic"></span></p>
                    <p><strong>Job ID:</strong> <span id="jobIDBasic"></span></p>
                    <p><strong>Role:</strong> <span id="roleBasic"></span></p>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-outline-secondary" data-bs-dismiss="modal">
                    Close
                </button>
            </div>
        </div>
    </div>
</div>

@foreach (UserVM item in Model)
{
    <div class="card mt-4 mx-4">
        <div class="row no-gutters">
            <div class="col-md-4 d-flex justify-content-center align-items-center">
                <img src="/Content/assets/img/avatars/@item.PhotoURL" class="card-img rounded-circle" alt="User Image">
            </div>
            <div class="col-md-8">
                <div class="card-body">
                    <h5 class="card-title">@item.FullName</h5>
                    <p class="card-text"><strong>Email:</strong> @item.EmailAddress</p>
                    <p class="card-text"><strong>Telefon:</strong> @item.PhoneNumber</p>
                    <p class="card-text"><strong>Adres:</strong> @item.Address</p>
                    <p class="card-text"><strong>Meslek:</strong> @item.Job</p>
                    <p class="card-text"><strong>Departman:</strong> @item.Department</p>
                    <button class="btn btn-primary btnDetail" value="@item.ID" data-toggle="modal" data-target="#exampleModalCenter">Details</button>
                    <a asp-area="SiteManagement" asp-controller="SiteManagement" asp-action="UpdateUser" asp-route-id="@item.ID" class="btn btn-secondary">Güncelle</a>
                </div>
            </div>
        </div>
    </div>
}

@section Scripts{
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script type="text/javascript">

        $(document).ready(function () {
            $('.btnDetail').click(function () {
                var id = $(this).val();

                $.ajax({
                    url: "/SiteManagement/SiteManagement/Detail/" + id,
                    type: "GET",
                    success: function (response) {
                        $('#nameBasic').text(response.firstName + ' ' + response.lastName);
                        $('#emailBasic').text(response.emailAddress);
                        $('#dobBasic').text(response.birthDate);
                        $('#addressBasic').text(response.address);
                        $('#phoneBasic').text(response.phoneNumber);
                        $('#departmentBasic').text(response.department);
                        $('#jobIDBasic').text(response.jobID);
                        $('#roleBasic').text(response.role);

                        $('#exampleModalCenter').modal('show');
                    },
                    error: function () {

                    }
                });
            });
        });

    </script>
}

