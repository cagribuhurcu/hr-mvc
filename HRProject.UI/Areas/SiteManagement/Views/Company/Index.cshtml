
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/SiteManagement/Views/Shared/_LayoutSiteManagement.cshtml";
}
@model List<Company>

<div class="mt-4 mx-4" style="margin-bottom:0px;">
    <a class="btn btn-success" asp-action="CreateCompany" asp-controller="Company" asp-area="SiteManagement"><i class="bx bx-edit-alt me-1"></i> + Create</a>
</div>
<div class="card mx-4" style="margin-top:0px;">
    <div class="table-responsive text-nowrap">
        <table class="table table-hover">
            <thead>
                <tr>
                    <th>#</th>
                    <th>Logo</th>
                    <th>Company Name</th>
                    <th>Title</th>
                    <th>Email</th>
                    <th>Phone</th>
                    <th>Address</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody class="table-border-bottom-0">
                @{
                    int rowCount = 1;
                }
                @foreach (Company item in Model)
                {
                    <tr>
                        <th>@rowCount</th>
                        <td>
                            <ul class="list-unstyled users-list m-0 avatar-group d-flex align-items-center">
                                <li> data-bs-toggle="tooltip"
                                data-popup="tooltip-custom"
                                data-bs-placement="top"
                                class="avatar avatar-xs pull-up"
                                    <img src="@item.LogoURL" alt="logo" class="rounded-circle" />
                                </li>
                            </ul>
                        </td>
                        <td><i class="fab fa-angular fa-lg text-danger me-3"></i> <strong>@item.CompanyName</strong></td>
                        <td>@item.Title</td>
                        <td>@item.EmailAddress</td>
                        <td>@item.PhoneNumber</td>
                        <td>@item.Address</td>
                        <td>
                            <div class="dropdown">
                                <button type="button" class="btn p-0 dropdown-toggle hide-arrow" data-bs-toggle="dropdown">
                                    <i class="bx bx-dots-vertical-rounded"></i>
                                </button>
                                <div class="dropdown-menu">
                                    <a asp-action="Update" asp-controller="Company" asp-area="SiteManagement" class="dropdown-item" ><i class="bx bx-edit-alt me-1"></i> Update</a>
                                    <a asp-action="Details" asp-controller="Company" asp-area="SiteManagement" class="dropdown-item" ><i class="bx bx-trash me-1"></i> Details</a>
                                </div>
                            </div>
                        </td>
                    </tr>
                    rowCount++;
                }
            </tbody>
        </table>
    </div>
</div>

