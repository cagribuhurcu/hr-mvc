
@{
    ViewData["Title"] = "GetPermissionRequest";
    Layout = "~/Areas/CompanyManager/Views/Shared/_LayoutCompanyManager.cshtml";
}

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/4.5.0/css/bootstrap.min.css">
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/4.5.0/js/bootstrap.min.js"></script>

@model List<EmployeePermission>


<div class="col-lg-12">
    <div class="card mx-4">
        <div class="card-header">
            <div class="align-items-lg-end">
                <strong class="card-title d-flex justify-content-center">Permission Request</strong>
            </div>
        </div>
        <div class="card-body">
            <div class="custom-tab">
                <nav>

                 
                    <ul class="nav nav-tabs" role="tablist">
                        <li class="nav-item">
                            <button type="button"
                                    class="nav-link active"
                                    role="tab"
                                    data-bs-toggle="tab"
                                    data-bs-target="#custom-nav-pending"
                                    aria-controls="custom-nav-pending"
                                    aria-selected="true">
                                Pending
                            </button>
                        </li>
                        <li class="nav-item">
                            <button type="button"
                                    class="nav-link"
                                    role="tab"
                                    data-bs-toggle="tab"
                                    data-bs-target="#custom-nav-confirmed"
                                    aria-controls="navs-top-profile"
                                    aria-selected="false">
                                Confirmed
                            </button>
                        </li>
                        <li class="nav-item">
                            <button type="button"
                                    class="nav-link"
                                    role="tab"
                                    data-bs-toggle="tab"
                                    data-bs-target="#custom-nav-cancelled"
                                    aria-controls="navs-top-messages"
                                    aria-selected="false">
                                Cancelled
                            </button>
                        </li>
                    </ul>

                </nav>
                <div class="tab-content pl-3 pt-2" id="nav-tabContent">
                    <div class="tab-pane fade show active" id="custom-nav-pending" role="tabpanel" aria-labelledby="custom-nav-pending-permissions">
                        <div class="card">
                            <div class="card-header"></div>

                            <div class="card-body">
                                <table id="bootstrap-data-table" class="table table-striped table-bordered">
                                    <thead>
                                        <tr>
                                            <th>#</th>
                                            <th>Employee Fullname</th>
                                            <th>Permission Name</th>
                                            <th>Required Date</th>
                                            <th>Start Day of Permission Request</th>
                                            <th>End Day of Permission Request</th>
                                            <th>Operation</th>
                                        </tr>
                                    </thead>
                                    <tbody>

                                        @{
                                            int rowcountt = 1;
                                        }
                                        @foreach (EmployeePermission item in Model)
                                        {
                                            if (item.PermissionState == Status.Pending)
                                            {
                                                <tr>
                                                    <th scope="row">@rowcountt</th>
                                                    <td>@item.Employee.FirstName @item.Employee.LastName</td>
                                                    <td>@item.Permission.PermissionName</td>
                                                    <td>@item.RequiredDate</td>
                                                    <td>@item.StartDate.Value.ToShortDateString()</td>
                                                    <td>@item.EndDate.Value.ToShortDateString()</td>
                                                    <td>
                                                        
                                                        <a asp-area="CompanyManager" asp-controller="Permission" asp-action="ConfirmedPermission" asp-route-id="@item.ID" class="btn btn-sm btn-success">Confirmed</a>
                                                        <a asp-area="CompanyManager" asp-controller="Permission" asp-action="CancelledPermission" asp-route-id="@item.ID" class="btn btn-sm btn-danger">Cancelled</a>

                                                    </td>
                                                </tr>
                                            }

                                            rowcountt++;
                                        }

                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>

                    <div class="tab-pane fade show" id="custom-nav-confirmed" role="tabpanel" aria-labelledby="custom-nav-confirmed-permissions">
                        <div class="card">
                            <div class="card-header"> </div>

                            <div class="card-body">
                                <table id="bootstrap-data-table" class="table table-striped table-bordered">
                                    <thead>
                                        <tr>
                                            <th>#</th>
                                            <th>Employee Fullname</th>
                                            <th>Permission Name</th>
                                            <th>Required Date</th>
                                            <th>Start day of permission request</th>
                                            <th>End day of permission request</th>
                                            
                                        </tr>
                                    </thead>
                                    <tbody>

                                        @{
                                            int rowcount2 = 1;
                                        }
                                        @foreach (EmployeePermission item in Model)
                                        {
                                            if (item.PermissionState == Status.Confirmed)
                                            {
                                                <tr>
                                                    <th scope="row">@rowcountt</th>
                                                    <td>@item.Employee.FirstName @item.Employee.LastName</td>
                                                    <td>@item.Permission.PermissionName</td>
                                                    <td>@item.RequiredDate</td>
                                                    <td>@item.StartDate.Value.ToShortDateString()</td>
                                                    <td>@item.EndDate.Value.ToShortDateString()</td>
                                                </tr>
                                            }

                                            rowcount2++;
                                        }


                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>

                    <div class="tab-pane fade show" id="custom-nav-cancelled" role="tabpanel" aria-labelledby="custom-nav-cancelled-permissions">
                        <div class="card">
                            <div class="card-header"> </div>


                            <div class="card-body">
                                <table id="bootstrap-data-table" class="table table-striped table-bordered">
                                    <thead>
                                        <tr>
                                            <th>#</th>
                                            <th>Employee Fullname</th>
                                            <th>Permission Name</th>
                                            <th>Required Date</th>
                                            <th>Start day of permission request</th>
                                            <th>End day of permission request</th>
                                        </tr>
                                    </thead>
                                    <tbody>

                                        @{
                                            int rowcount3 = 1;
                                        }
                                        @foreach (EmployeePermission item in Model)
                                        {
                                            if (item.PermissionState == Status.Canceled)
                                            {
                                                <tr>
                                                    <th scope="row">@rowcount3</th>
                                                    <td>@item.Employee.FirstName @item.Employee.LastName</td>
                                                    <td>@item.Permission.PermissionName</td>
                                                    <td>@item.RequiredDate</td>
                                                    <td>@item.StartDate.Value.ToShortDateString()</td>
                                                    <td>@item.EndDate.Value.ToShortDateString()</td>
                                                </tr>
                                            }

                                            rowcount3++;
                                        }

                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>
</div>



