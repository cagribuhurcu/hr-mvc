@using HRProject.Entities.Enums;
@using HRProject.UI.Helper;
@model ChangePasswordVM

<form id="formAccountSettings" asp-action="ChangePassword" asp-area="CompanyManager" method="post" enctype="multipart/form-data">
    <div class="card my-4 mx-4">
        <h5 class="card-header">Change Password</h5>

        @if (!ViewData.ModelState.IsValid)
        {
            <div class="alert alert-danger alert-dismissible" role="alert" asp-validation-summary="All">
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        }

        <div class="card-body">
            <div class="row">
                <div class="mb-3 col-md-6">
                    <label asp-for="OldPassword" class="form-label">Old Password</label>
                    <input asp-for="OldPassword" class="form-control" type="text" id="html5-text-input" placeholder="Please enter your old password here"/>
                </div>
                <div class="mb-3 col-md-6">
                    <label asp-for="NewPassword" class="form-label">New Password</label>
                    <input asp-for="NewPassword" class="form-control" type="text" id="html5-text-input" placeholder="Please enter your new password here" />
                </div>
                <div class="mb-3 col-md-6">
                    <label asp-for="ConfirmPassword" class="form-label">Confirm Password</label>
                    <input asp-for="ConfirmPassword" class="form-control" type="text" id="html5-text-input" placeholder="Please confirm your new password here" />
                </div>
                
            <div class="mt-2">
                <button type="submit" class="btn btn-primary me-2">Update</button>
                <a asp-action="Index" asp-controller="CompanyManager" asp-area="CompanyManager" class="btn btn-outline-secondary">Cancel</a>
            </div>
        </div>
        <!-- /Account -->
    </div>
</form>
