@{
    ViewData["Title"] = "ExpenseList";
    Layout = "~/Areas/Employment/Views/Shared/_LayoutEmployment.cshtml";
}
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/4.5.0/css/bootstrap.min.css">
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/4.5.0/js/bootstrap.min.js"></script>

@model List<Expense>

<div class="col-lg-12">
    <div class="card mx-4 my-4">
        <div class="card-header">
            <div class="align-items-lg-end">
                <strong class="card-title d-flex justify-content-center">Expense Request</strong>
            </div>
        </div>
        <div class="card-body">
            <div class="custom-tab">
                <nav>


                    <ul class="nav nav-tabs" role="tablist">
                        <li class="nav-item">
                            <button type="button"
                                    class="nav-link active"
                                    role="tab"
                                    data-bs-toggle="tab"
                                    data-bs-target="#custom-nav-pending"
                                    aria-controls="custom-nav-pending"
                                    aria-selected="true">
                                Pending
                            </button>
                        </li>
                        <li class="nav-item">
                            <button type="button"
                                    class="nav-link"
                                    role="tab"
                                    data-bs-toggle="tab"
                                    data-bs-target="#custom-nav-confirmed"
                                    aria-controls="navs-top-profile"
                                    aria-selected="false">
                                Confirmed
                            </button>
                        </li>
                        <li class="nav-item">
                            <button type="button"
                                    class="nav-link"
                                    role="tab"
                                    data-bs-toggle="tab"
                                    data-bs-target="#custom-nav-cancelled"
                                    aria-controls="navs-top-messages"
                                    aria-selected="false">
                                Cancelled
                            </button>
                        </li>
                    </ul>

                </nav>
                <div class="tab-content pl-3 pt-2" id="nav-tabContent">
                    <div class="tab-pane fade show active" id="custom-nav-pending" role="tabpanel" aria-labelledby="custom-nav-pending-permissions">
                        <div class="card">
                            <div class="card-header"></div>

                            <div class="card-body">
                                <table id="bootstrap-data-table" class="table table-striped table-bordered">
                                    <thead>
                                        <tr>
                                            <th>Expense Name</th>
                                            <th>Expense State</th>
                                            <th>Amount</th>
                                            <th>Currency</th>
                                            <th>Attachment</th>
                                            <th>Operation</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (Expense item in Model)
                                        {
                                            if (item.ApprovalStatus == Status.Pending)
                                            {
                                                <tr>
                                                    <td>@item.ExpenseType.Value</td>
                                                    <td><span class="badge bg-warning">@item.ApprovalStatus</span></td>
                                                    <td>@item.Amount</td>
                                                    <td>@item.Currency</td>
                                                    <td>
                                                        <a target="_blank" href="@item.FileURL"><i class='bx bxs-file-pdf'></i></a>
                                                    </td>
                                                    <td>
                                                        <a asp-action="DeleteExpense" asp-controller="Employee" asp-area="Employment" asp-route-id="@item.ID" class="btn btn-danger"><i class="bx bx-edit-alt me-1"></i>Delete</a>
                                                    </td>
                                                </tr>
                                            }
                                        }

                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>

                    <div class="tab-pane fade show" id="custom-nav-confirmed" role="tabpanel" aria-labelledby="custom-nav-confirmed-permissions">
                        <div class="card">
                            <div class="card-header"> </div>

                            <div class="card-body">
                                <table id="bootstrap-data-table" class="table table-striped table-bordered">
                                    <thead>
                                        <tr>
                                            <th>Expense Name</th>
                                            <th>Expense State</th>
                                            <th>Amount</th>
                                            <th>Currency</th>
                                            <th>Attachment</th>
                                            <th>Confirmed Date</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (Expense item in Model)
                                        {
                                            if (item.ApprovalStatus == Status.Confirmed)
                                            {
                                                <tr>
                                                    <td>@item.ExpenseType.Value</td>
                                                    <td><span class="badge bg-success">@item.ApprovalStatus</span></td>
                                                    <td>@item.Amount</td>
                                                    <td>@item.Currency</td>
                                                    <td>
                                                        <a target="_blank" href="@item.FileURL"><i class='bx bxs-file-pdf'></i></a>
                                                    </td>
                                                    <td>@item.ApprovalDate</td>
                                                </tr>
                                            }
                                        }


                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>

                    <div class="tab-pane fade show" id="custom-nav-cancelled" role="tabpanel" aria-labelledby="custom-nav-cancelled-permissions">
                        <div class="card">
                            <div class="card-header"> </div>


                            <div class="card-body">
                                <table id="bootstrap-data-table" class="table table-striped table-bordered">
                                    <thead>
                                        <tr>
                                            <th>Expense Name</th>
                                            <th>Expense State</th>
                                            <th>Amount</th>
                                            <th>Currency</th>
                                            <th>Attachment</th>
                                            <th>Confirmed Date</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (Expense item in Model)
                                        {
                                            if (item.ApprovalStatus  == Status.Canceled)
                                            {
                                                <tr>
                                                    <td>@item.ExpenseType.Value</td>
                                                    <td><span class="badge bg-danger">@item.ApprovalStatus</span></td>
                                                    <td>@item.Amount</td>
                                                    <td>@item.Currency</td>
                                                    <td>
                                                        <a target="_blank" href="@item.FileURL"><i class='bx bxs-file-pdf'></i></a>
                                                    </td>
                                                    <td>@item.ApprovalDate</td>
                                                </tr>
                                            }
                                        }

                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>
</div>

